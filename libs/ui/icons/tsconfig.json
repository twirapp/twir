{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "removeComments": true,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"]
}
