{
	email tls@twir.app
	on_demand_tls {
		ask http://localhost:3009/v1/short-links/custom-domain/allow
	}
}

{$SITE_BASE_URL} dev.twir.app http://localhost:3005 {
    reverse_proxy http://127.0.0.1:3010
    tls internal

    handle_path /api/* {
        reverse_proxy 127.0.0.1:3009
    }

    # Socket proxy
    handle_path /socket/* {
    		# rewrite * /socket{path}
        reverse_proxy http://127.0.0.1:3004
    }

    # Old API proxy
    handle_path /api-old/* {
        reverse_proxy http://127.0.0.1:3002
    }

    # Overlays proxy
    handle_path /overlays/* {
    		rewrite * /overlays{path}
        reverse_proxy http://127.0.0.1:3008
    }

    # Dashboard proxy
    handle_path /dashboard* {
    		rewrite * /dashboard{path}
        reverse_proxy http://127.0.0.1:3006
    }

    handle_path /s* {
				rewrite * /v1/short-links{path}
				reverse_proxy http://127.0.0.1:3009
		}
}

:443 {
	@customDomain not host {$SITE_BASE_URL} dev.twir.app http://localhost:3005

	tls {
		on_demand
	}

	handle @customDomain {
		rewrite * /v1/short-links{path}

		reverse_proxy http://localhost:3009 {
			header_up Host {host}
			header_up X-Custom-Domain true
		}
	}

	handle {
		respond "Host not configured" 404
 	}
}
