{
	"languages": {
		"JavaScript": {
			"code_actions_on_format": {
				"source.fixAll.oxc": true
			}
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.fixAll.oxc": true
			}
		},
		"Go": {
			"formatter": "language_server"
		}
	},
	"format_on_save": "on",
	"file_types": {
		"graphql": ["graphqls"]
	},
	"lsp": {
		"gopls": {
			"initialization_options": {
				"usePlaceholders": false,
				"gofumpt": true
			}
		},
		"oxc": {
			"initialization_options": {
				"options": {
					"run": "onType",
					"configPath": null,
					"tsConfigPath": null,
					"unusedDisableDirectives": "allow",
					"typeAware": false,
					"flags": {}
				}
			}
		}
	}
}
